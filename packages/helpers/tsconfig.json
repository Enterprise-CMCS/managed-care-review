{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "target": "ESNext",
        "moduleResolution": "bundler",
        "baseUrl": "/",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "jsx": "react",

        "outDir": "./build",
        "rootDir": "./src"
    },
    "include": ["src/**/*"]
}
