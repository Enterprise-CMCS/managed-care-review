{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "lib": ["ES2021", "DOM"],
        "target": "ES2021",
        "moduleResolution": "bundler",
        "baseUrl": "/",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "outDir": "build"
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
