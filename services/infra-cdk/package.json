{
  "name": "mcr-infra-cdk",
  "version": "1.0.0",
  "description": "AWS CDK Infrastructure for Managed Care Review",
  "private": true,
  "scripts": {
    "build": "tsc --noEmit",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:size": "./scripts/test-layer-sizes.sh",
    "cdk": "cdk",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "bootstrap": "cdk bootstrap",
    "lint": "eslint . --ext .ts",
    "precommit": "lint-staged",
    "synth:dev": "cdk synth --context stage=dev",
    "synth:val": "cdk synth --context stage=val",
    "synth:prod": "cdk synth --context stage=prod",
    "diff:dev": "cdk diff --context stage=dev",
    "diff:val": "cdk diff --context stage=val",
    "diff:prod": "cdk diff --context stage=prod"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@luckycatfactory/esbuild-graphql-loader": "^3.8.1",
    "@types/jest": "^29.5.12",
    "@types/node": "20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "aws-cdk": "2.1023.0",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.4.3"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.828.0",
    "@aws-solutions-constructs/aws-apigateway-lambda": "2.86.0",
    "@aws-solutions-constructs/aws-cloudfront-s3": "2.86.0",
    "@aws-solutions-constructs/aws-cognito-apigateway-lambda": "2.86.0",
    "@aws-solutions-constructs/aws-eventbridge-lambda": "2.86.0",
    "@aws-solutions-constructs/aws-lambda-secretsmanager": "2.86.0",
    "@aws-solutions-constructs/aws-s3-lambda": "2.86.0",
    "@aws-solutions-constructs/aws-wafwebacl-apigateway": "2.86.0",
    "aws-cdk-lib": "2.207.0",
    "cdk-nag": "^2.28.0",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.5",
    "graphql": "^16.0.0",
    "graphql-tag": "^2.11.0",
    "source-map-support": "^0.5.21"
  },
  "main": "jest.config.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
