{
  "name": "@mcr/infra-cdk",
  "version": "1.0.0",
  "description": "AWS CDK Infrastructure for Managed Care Review",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cdk": "cdk",
    "presynth": "pnpm run -C ../.. build:packages",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "bootstrap": "cdk bootstrap",
    "lint": "eslint . --ext .ts",
    "clean": "./scripts/clean.sh",
    "clean:full": "./scripts/clean.sh --full",
    "validate:env": "./scripts/validate-env.sh",
    "deploy:dev": "./scripts/deploy.sh dev",
    "deploy:val": "./scripts/deploy.sh val",
    "deploy:prod": "./scripts/deploy.sh prod",
    "synth:dev": "cdk synth --context stage=dev",
    "synth:val": "cdk synth --context stage=val",
    "synth:prod": "cdk synth --context stage=prod",
    "diff:dev": "cdk diff --context stage=dev",
    "diff:val": "cdk diff --context stage=val",
    "diff:prod": "cdk diff --context stage=prod"
  },
  "devDependencies": {
    "@luckycatfactory/esbuild-graphql-loader": "^3.8.1",
    "@types/jest": "^29.5.12",
    "@types/node": "20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "aws-cdk": "2.147.0",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.0",
    "fs-extra": "^11.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.4.3"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.2.0",
    "@aws-lambda-powertools/metrics": "^2.2.0",
    "@aws-lambda-powertools/tracer": "^2.2.0",
    "@aws-sdk/client-secrets-manager": "^3.828.0",
    "@aws-solutions-constructs/aws-cloudfront-s3": "^2.57.0",
    "@aws-solutions-constructs/aws-cognito-apigateway-lambda": "^2.57.0",
    "@aws-solutions-constructs/aws-lambda-secretsmanager": "^2.57.0",
    "@aws-solutions-constructs/aws-s3-lambda": "^2.57.0",
    "@aws-solutions-constructs/aws-wafwebacl-apigateway": "^2.57.0",
    "aws-cdk-lib": "2.147.0",
    "cdk-nag": "^2.28.0",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.5",
    "source-map-support": "^0.5.21"
  },
  "main": "jest.config.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
