{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "types": [
            "cypress",
            "node",
            "vite/client",
            "vitest/globals",
            "@tanstack/react-table"
        ],
        "lib": ["es6", "dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*",
        "vite.config.ts",
        "vite-env.d.ts",
        "eslint.config.ts"
    ]
}
