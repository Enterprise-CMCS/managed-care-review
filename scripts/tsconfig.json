{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2021", "dom.iterable"],
        "target": "es2021",
        "moduleResolution": "bundler",

        "baseUrl": "/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}
